{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "composite": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "tests",
    "**/*.test.*",
    "**/*.spec.*",
    "node_modules",
    "dist",
    "src/dev/**"
  ]
}
